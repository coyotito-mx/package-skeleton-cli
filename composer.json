{
    "name": "asciito/skeleton",
    "description": "The skeleton CLI init/bootstrap a package",
    "keywords": ["framework", "laravel", "laravel zero", "console", "cli"],
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Ayax CÃ³rdova",
            "email": "ayax.cordova@aydev.mx"
        }
    ],
    "require": {
        "php": "^8.3",
        "ext-pcntl": "*",
        "composer/spdx-licenses": "^1.5",
        "illuminate/log": "^12.17",
        "laravel-zero/framework": "^v12.0.2"
    },
    "require-dev": {
        "larastan/larastan": "^v3.7.2",
        "laravel/pint": "v1.25.1",
        "mockery/mockery": "^1.6.12",
        "pestphp/pest": "^v4.1.2",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "@php skeleton test",
        "test:ci": "@php skeleton test --ci",
        "style": "@php vendor/bin/pint --config=./pint.json",
        "style:test": "@php vendor/bin/pint --preset=laravel --test",
        "lint": "@php vendor/bin/phpstan analyse",
        "lint:with-style": [
            "@lint",
            "@style:test"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "bin": ["skeleton"]
}
